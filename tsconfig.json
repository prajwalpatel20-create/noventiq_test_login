{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": ".",
        "moduleResolution": "node",
        "noEmit": true
    },
    "include": [
        "tests/**/*",
        "pages/**/*",
        "actions/**/*",
        "fixtures/**/*",
        "utils/**/*",
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules",
        "playwright-report",
        "test-results"
    ]
}

